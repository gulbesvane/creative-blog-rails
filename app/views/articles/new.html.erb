<h1>Create a new article</h1>

<%# display errors when creating new article if any present %>
<% if @article.errors.any?%>
    <h3>Fix error(s) to save the article:</h3>
    <ul>
        <%# iterate through each error message and display in unordered list%>
        <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true, data: { turbo: false } do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>

<%= button_to 'All articles', articles_path %>